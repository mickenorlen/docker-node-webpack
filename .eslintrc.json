{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest/globals": true,
        "jest": true
    },
     "parserOptions": {
         "parser": "babel-eslint"
     },
    "plugins":  [
        "vue",
        "jest"
    ],
    "extends": [
        "airbnb-base",
        "plugin:vue/essential",
        "plugin:jest/recommended"
    ],
    "rules": {
        "no-console": ["error", { "allow": ["info", "warn", "error"] }],
        "arrow-parens": "off"
    }
}
